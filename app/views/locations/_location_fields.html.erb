<fieldset class="fieldset nested-fields">
    <legend>Location</legend>
    
    <div class="row">
	<div class="medium-6 columns">
	    <%= f.label :latitude %>
	    <%= f.text_field :latitude, id: :location_latitude %>
	</div>

	<div class="medium-6 columns">
	    <%= f.label :longitude %>
	    <%= f.text_field :longitude, id: :location_longitude %>
	</div>
    </div>

    <div class="field">
	<%= f.label :label %>
	<%= f.text_field :label, id: :location_label %>
    </div>

    <div class="field">
	<%= link_to_remove_association "Remove location", f, class: 'button' %>
    </div>
</fieldset>
