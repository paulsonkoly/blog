<fieldset class="nested-fields">
    <div class="field">
	<%= f.label :latitude %>
	<%= f.text_field :latitude, id: :location_latitude %>
    </div>

    <div class="field">
	<%= f.label :longitude %>
	<%= f.text_field :longitude, id: :location_longitude %>
    </div>

    <div class="field">
	<%= f.label :label %>
	<%= f.text_field :label, id: :location_label %>
    </div>

    <div class="field">
	<%= link_to_remove_association "Remove location", f %>
    </div>
</fieldset>
